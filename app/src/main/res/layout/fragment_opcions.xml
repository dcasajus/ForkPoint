<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:weightSum="1">

    <CheckBox
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:text="Desabilita les notificacions"
        android:id="@+id/notcheck"
        android:layout_weight="0.13"
        android:checked="false"
        android:textSize="20dp"
        android:textColor="#000"
        android:paddingLeft="0dp"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:layout_marginTop="105dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:text="Guardar nom d&apos;usuari"
        android:layout_weight="0.13"
        android:checked="false"
        android:textColor="#000"
        android:textSize="20dp"
        android:paddingLeft="0dp"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:layout_below="@+id/notcheck"
        android:layout_alignLeft="@+id/notcheck"
        android:layout_alignStart="@+id/notcheck"
        android:id="@+id/usercheck" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:layout_marginBottom="93dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#FCFCFC"
        android:background="@drawable/buttonlocalitat"
        android:shadowColor="#595857"
        android:shadowDx="-1"
        android:shadowDy="-2"
        android:shadowRadius="19"
        android:textSize="44px" />

</RelativeLayout>